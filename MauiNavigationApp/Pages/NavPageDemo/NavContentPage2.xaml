<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMauiApp.Pages.NavPageDemo.NavContentPage2"
             Title="NavContentPage2"
             BackgroundColor="Green">

    <VerticalStackLayout>
        <Label
            Text="This is content page 1"
            FontSize="20"
            FontAttributes="Bold"
            Margin="20"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="NavContentPage3Button"
            Text="Nav Page-003"
            Margin="20"
            Clicked="NavContentPage3Button_clicked"/>
        <Button 
                Text="Back"
                Margin="20"
                Background="Brown"
                Clicked="NavCloseButton_clicked"></Button>

    </VerticalStackLayout>
</ContentPage>