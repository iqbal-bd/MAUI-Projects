<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMauiApp.Pages.NavPageDemo.NavContentPage1"
             Title="NavContentPage1"
             BackgroundColor="Maroon">

    <VerticalStackLayout>
        <Label
            Text="This is Nav content page 1"
            FontSize="20"
            FontAttributes="Bold"
            Margin="20"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="NavContentPage2Button"
                Text="Open Nav Content Page 2"
                Margin="20"
                Clicked="NavContentPage2Button_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>