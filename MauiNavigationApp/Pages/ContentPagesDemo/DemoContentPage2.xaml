<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMauiApp.Pages.DemoContentPage2"
             Title="DemoContentPage2"
             BackgroundColor="Green">

    <VerticalStackLayout>
        <Label
            Text="This is content page 1"
            FontSize="20"
            FontAttributes="Bold"
            Margin="20"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="contentPage3Button"
            Text="Page-003"
            Margin="20"
            Clicked="contentPage3Button_clicked"/>
        <Button 
                Text="Back"
                Margin="20"
                Background="Brown"
                Clicked="closeButton_clicked"></Button>
                
    </VerticalStackLayout>
</ContentPage>